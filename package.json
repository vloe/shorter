{
	"name": "@sh/monorepo",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"landing": "pnpm --filter @sh/landing -- ",
		"core": "pnpm --filter @sh/server -- ",
		"ui": "pnpm --filter @sh/ui -- ",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --check . && eslint . --fix",
		"migrate:add": "cd core/db && cargo sqlx migrate add",
		"migrate:run": "cd core/db && cargo sqlx migrate run"
	},
	"devDependencies": {
		"@types/eslint": "^9.6.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-perfectionist": "^3.1.3",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"turbo": "^2.0.12",
		"typescript-eslint": "^8.0.0"
	},
	"type": "module",
	"packageManager": "pnpm@9.7.0"
}
